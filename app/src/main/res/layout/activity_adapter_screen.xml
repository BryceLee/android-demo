<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="textjunit.lizhongxin.demo.ui.AdapterScreenActivity">

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="start"
        android:text="produce_watermark"/>
    <Button
        android:id="@+id/start2"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="start2"
        android:text="高清"/>

    <EditText
        android:id="@+id/et"
        android:hint="输入想要生成的水印的分辨率宽度：比如720"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/start"/>
    <EditText
        android:id="@+id/et2"
        android:hint="输入想要生成的水印的分辨率高度：比如720"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et"/>
    <EditText
        android:id="@+id/etScale"
        android:hint="输入想要缩放的倍数，比如：3"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et2"/>
    <EditText
        android:id="@+id/etLeft"
        android:hint="输入想要left，比如：30"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etScale"/>
    <EditText
        android:id="@+id/etTop"
        android:hint="输入想要top，比如：30"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etLeft"/>
    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/img"
        android:layout_marginBottom="@dimen/bq_px_30"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/bq_px_430"
        android:layout_height="@dimen/bq_px_430"/>
</android.support.constraint.ConstraintLayout>
